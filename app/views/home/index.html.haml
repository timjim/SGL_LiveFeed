%p.notice
  = notice
%p.alert
  = alert

#startDate.hidden
  = @event.start_time.strftime("%Y, %-m, %d %H:%M:%S")
#nowDate.hidden
  = Time.zone.now.strftime("%Y, %-m, %d %H:%M:%S")

#welcome_container.clearfix
  .logo
    = image_tag 'logo.png', :id => 'sgl'
  #text
    .subtitle.grey_bg.mb_fix 
      %h1
        %span Startup Grind London:
        %span.red Live Feed
    .subtitle 
      %h2 
        %span
          = @event.start_time.strftime("%-d %B %Y")
        %span
          with
        %span.red
          = @event.guest
    #event_start.subtitle
      #clock
  .logo
    =image_tag @event.company_image_url, :id => 'company'

#whatis
  %h2 Watch the live feed, ask questions, and connect with others. 

#description
  .image
    =image_tag @event.guest_image_url
  .text
    %h2
      %span GUEST -
      %span.red
        = @event.guest
    %p
      = @event.guest_bio

#host_description
  .image
    =image_tag @event.host_image_url
  .text
    %h2
      %span.red
        = @event.host
      %span - HOST
    %p
      = @event.host_bio   

#bottom  
  .login
    - if current_user
      %p
        = current_user.name
      %p
        = current_user.title
      = image_tag current_user.image
      = current_user.email
      = link_to "Log out", destroy_user_session_path, method: :delete
    - else
      = link_to user_omniauth_authorize_path(:linkedin) do
        #linkedin
          %p Sign in with LinkedIn
      = link_to new_user_session_path do
        .log
          %p Sign in with email 
      = link_to new_user_registration_path do
        .log
          %p.log Register with email
  .eventbrite
    = link_to @event.eventbrite_url do
      #eventbutton
        %p Attend in person (Eventbrite)
    %p.location
      %span Location:
      %span
        =@event.location

#partners
  %p.grey THANK YOU TO OUR AMAZING PARTNERS
  = image_tag "google.png"
  = image_tag "cass.png", :class => "cass"